#define CONFIG_TOP
#include "../Config.h"
#undef CONFIG_TOP

GEN_SRCS =

PROTECTED_SRCS =

SRCS = $(GEN_SRCS) $(PROTECTED_SRCS) veredit.y veredit_y.cc veredit.l veredit_l.cc $(EXTRA_SRCS)

OBJS = veredit_y.o veredit_l.o $(GEN_SRCS:.cc=.o) $(PROTECTED_SRCS:.cc=.o) $(EXTRA_SRCS:.cc=.o)

GEN_HDRS =

PROTECTED_HDRS =

INCLUDE_FILES = $(GEN_HDRS) $(PROTECTED_HDRS)

INCLUDES = -I.. -I../src -I../util -I../objects

CXXOPTIONS = $(CXX_PARSER_OPTIONS)

PARSER = bison
PARSER_FLAGS = -y -d

SCANNER = flex
SCANNER_FLAGS = 

TGTPATH = ../$(OBJDIR)

vpath %.o $(TGTPATH)

NormalLibraryTarget(parser,$(OBJS))
DependTarget()


veredit_y.cc veredit.h : veredit.y
	$(PARSER) $(PARSER_FLAGS) veredit.y
	sed s/yy/veredit_yy/g <y.tab.c >veredit_y.cc
	sed s/yy/veredit_yy/g <y.tab.h >veredit.h

veredit_l.cc : veredit.l veredit.y
	$(SCANNER) $(SCANNER_FLAGS) veredit.l
	sed s/yy/veredit_yy/g <lex.yy.c >veredit_l.cc

clean ::
	rm -f veredit_y.cc veredit.output y.tab.c y.output
	rm -f veredit_l.cc veredit.h y.tab.h lex.yy.c
	rm -f *.tmp*

#define CONFIG_BOT
#include "../Config.h"
#undef CONFIG_BOT

